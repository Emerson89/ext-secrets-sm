{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "Federated": "arn:aws:iam::<ACCOUNT-ID>>:oidc-provider/oidc.eks.us-east-1.amazonaws.com/id/F2DXXXXXXXXXXXXXXXXXXXXX"
        },
        "Action": "sts:AssumeRoleWithWebIdentity",
        "Condition": {
          "StringEquals": {
            "oidc.eks.us-east-1.amazonaws.com/id/F2DXXXXXXXXXXXXXXXXXXXXX:aud": "sts.amazonaws.com",
            "oidc.eks.us-east-1.amazonaws.com/id/F2DXXXXXXXXXXXXXXXXXXXXX:sub": "system:serviceaccount:external-secrets:external-secrets"
          }
        }
      }
    ]
  }